<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login.presentation.LoginFragment">

    <data>
        <variable
            name="loginFragment"
            type="com.anaandreis.minhapesquisa_trellocloneapp.login.presentation.LoginFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MinhaPesquisa_TrelloCloneApp">


        <ImageView
            android:id="@+id/cardImageView"
            android:layout_width="385dp"
            android:layout_height="385dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/elevatedcard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloEntrar" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            style="Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="257dp"
            android:layout_height="58dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#7A7A7A"
            android:backgroundTintMode="src_atop"
            android:ems="13"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/grey"
            app:boxBackgroundColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/cardImageView"
            app:layout_constraintStart_toStartOf="@+id/cardImageView"
            app:layout_constraintTop_toTopOf="@+id/cardImageView"
            app:startIconDrawable="@drawable/alternate_email"
            android:autofillHints="" />

        <EditText
            android:id="@+id/password"
            style="Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="257dp"
            android:layout_height="58dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#7A7A7A"
            android:backgroundTintMode="src_atop"
            android:ems="13"
            android:hint="@string/senha"
            android:inputType="textPassword"
            android:textColorHint="@color/grey"
            app:boxBackgroundColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddress"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            app:startIconDrawable="@drawable/alternate_email"
            android:autofillHints="" />

        <ImageView
            android:id="@+id/roundBall1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="56dp"
            android:background="@drawable/roundredball"
            app:layout_constraintBottom_toTopOf="@+id/cardImageView"
            app:layout_constraintStart_toEndOf="@+id/tituloEntrar" />

        <ImageView
            android:id="@+id/roundBall2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="240dp"
            android:background="@drawable/roundredball"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardImageView" />


        <TextView
            android:id="@+id/tituloEntrar"
            style="@style/TitleRobotoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/conta"
            app:layout_constraintBottom_toBottomOf="@+id/backButton"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            app:layout_constraintTop_toTopOf="@+id/backButton"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/mainGreen" />

        <Button
            android:id="@+id/loginButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainRed"
            android:text="@string/entrar"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/cardImageView"
            app:layout_constraintEnd_toEndOf="@+id/cardImageView"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@+id/cardImageView"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintVertical_bias="0.385" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>